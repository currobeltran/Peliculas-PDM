<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ObtenerRecomendacion2">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="366dp"
        android:layout_height="117dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/catamaran_medium"
        android:gravity="center"
        android:text="@string/elijaparametros"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mostrargeneros"
        android:layout_width="330dp"
        android:layout_height="46dp"
        android:layout_marginTop="40dp"
        android:onClick="botonParametroPulsado"
        android:text="@string/generos"
        app:backgroundTint="@color/teal_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/mostrarepocas"
        android:layout_width="323dp"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:onClick="botonParametroPulsado"
        android:text="@string/epoca"
        app:backgroundTint="@color/teal_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mostrargeneros" />

    <Button
        android:id="@+id/mostrarpuntuacionminima"
        android:layout_width="323dp"
        android:layout_height="42dp"
        android:layout_marginTop="40dp"
        android:onClick="botonParametroPulsado"
        android:text="@string/puntuacionminima"
        app:backgroundTint="@color/teal_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mostrarepocas" />

    <Button
        android:id="@+id/mostrarpopularidad"
        android:layout_width="317dp"
        android:layout_height="42dp"
        android:layout_marginTop="40dp"
        android:onClick="botonParametroPulsado"
        android:text="@string/popularidad"
        app:backgroundTint="@color/teal_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mostrarpuntuacionminima" />

    <Button
        android:id="@+id/button12"
        android:layout_width="164dp"
        android:layout_height="51dp"
        android:layout_marginTop="56dp"
        android:onClick="verPeliculasRelacionadas"
        android:text="@string/buscar"
        app:backgroundTint="@color/teal_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mostrarpopularidad" />
</androidx.constraintlayout.widget.ConstraintLayout>