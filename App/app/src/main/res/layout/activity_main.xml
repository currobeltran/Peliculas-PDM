<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sitegusto2"
        android:layout_width="365dp"
        android:layout_height="43dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/catamaran_medium"
        android:gravity="center"
        android:text="@string/agite"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sitegusto"
        android:layout_width="365dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/catamaran_medium"
        android:gravity="center"
        android:text="@string/titulocarrusel"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.synnapps.carouselview.CarouselView
        android:id="@+id/carouselView"
        android:layout_width="247dp"
        android:layout_height="321dp"
        android:layout_marginTop="40dp"
        app:fillColor="#FFFFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sitegusto"
        app:pageColor="#00000000"
        app:radius="6dp"
        app:slideInterval="3000"
        app:strokeColor="#FF777777"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="259dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/catamaran_medium"
        android:onClick="siAsistente"
        android:text="@string/asistentevoz"
        android:textSize="14sp"
        android:textStyle="bold"
        app:backgroundTint="@color/teal_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="256dp"
        android:layout_height="46dp"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/catamaran_medium"
        android:onClick="noAsistente"
        android:text="@string/obtenerpelicula"
        android:textSize="14sp"
        android:textStyle="bold"
        app:backgroundTint="@color/teal_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mensajePeliculasFavoritas" />

    <Button
        android:id="@+id/button7"
        android:layout_width="252dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/catamaran_medium"
        android:onClick="valorarPelicula"
        android:text="@string/valorarpeli"
        android:textStyle="bold"
        app:backgroundTint="@color/teal_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carouselView" />

    <TextView
        android:id="@+id/mensajePeliculasFavoritas"
        android:layout_width="354dp"
        android:layout_height="34dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/catamaran_medium"
        android:gravity="center"
        android:textColor="@android:color/primary_text_light"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:id="@+id/button9"
        android:layout_width="257dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:text="@string/mispeliculas"
        app:backgroundTint="@color/teal_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mensajePeliculasFavoritas" />

</androidx.constraintlayout.widget.ConstraintLayout>