<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioNoAsistente">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="342dp"
        android:layout_height="144dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/catamaran_medium"
        android:gravity="center"
        android:text="@string/inicionoasistente"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="349dp"
        android:layout_height="392dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="188dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_action_name"
                    tools:srcCompat="@drawable/ic_action_name" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/chaplin" />

            </LinearLayout>

            <Button
                android:id="@+id/classic"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:fontFamily="@font/catamaran_medium"
                android:onClick="opcionElegida"
                android:text="@string/peliantigua"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/teal_700" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:layout_marginTop="30sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="108dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/rocky"
                    tools:srcCompat="@drawable/rocky" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="126dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/elpadrino"
                    tools:srcCompat="@drawable/elpadrino" />
            </LinearLayout>

            <Button
                android:id="@+id/colouredclassic"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:fontFamily="@font/catamaran_medium"
                android:onClick="opcionElegida"
                android:text="@string/pelimasmoderna"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/teal_700" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:layout_marginTop="30sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="178dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/pulpfiction"
                    tools:srcCompat="@drawable/pulpfiction" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/fightclub" />
            </LinearLayout>

            <Button
                android:id="@+id/actual"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:fontFamily="@font/catamaran_medium"
                android:onClick="opcionElegida"
                android:text="@string/pelimoderna"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/teal_700" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button5"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="49dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:gravity="start"
        android:onClick="volverAtras"
        app:icon="@drawable/abc_vector_test"
        app:iconPadding="0dp"
        app:iconTint="#00796B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>